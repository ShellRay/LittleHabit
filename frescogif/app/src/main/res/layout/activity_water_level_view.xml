<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    android:layout_height="match_parent">

    <com.example.frescogif.view.WaterLevel.WaterLevelView
        android:id="@+id/water_level"
        android:text="@string/tips"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@mipmap/water_level_icon"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

    <com.example.frescogif.view.WaterLevel.RealWaveLevelView
        android:id="@+id/realWaterLevel"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:anyshapeMask="@mipmap/water_level_icon"
        android:src="@mipmap/dead1"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>
    <!--android:src="@mipmap/dead10"-->
</LinearLayout>