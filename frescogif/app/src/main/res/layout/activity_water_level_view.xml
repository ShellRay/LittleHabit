<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <com.example.frescogif.view.WaterLevel.WaterLevelView
        android:id="@+id/water_level"
        android:text="@string/tips"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/bg_normal_btn_color"
        android:paddingLeft="5dp"
        android:layout_marginTop="50dp"
        android:paddingRight="5dp"/>

    <com.example.frescogif.view.WaterLevel.RealWaveLevelView
        android:id="@+id/realWaterLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:anyshapeMask="@mipmap/water_level_icon"
        android:background="@mipmap/water_level_icon"
        app:anyshapeBackColor ="#ff000000"
        android:layout_marginTop="30dp"
        />
    <!---->
    <!--android:src="@mipmap/dead1"-->
    <!--android:src="@mipmap/dead10"-->

    <com.example.frescogif.view.WaterLevel.BaselerWaterView
        android:id="@+id/BaselerWaterView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/bg_normal_btn_color"
        android:paddingLeft="5dp"
        android:layout_marginTop="30dp"
        android:paddingRight="5dp"/>

    <com.example.frescogif.view.WaterLevel.WaveCircleView
        android:id="@+id/waveCircle"
        android:layout_width="50dp"
        android:layout_height="35dp"
        app:anyshapeMask="@mipmap/water_level_icon"
        android:background="@mipmap/water_level_icon"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/addDepth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="addDepth"
        android:layout_marginTop="40dp"
        />
</LinearLayout>