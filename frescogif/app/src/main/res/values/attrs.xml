<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PageGridView">
        <attr name="gridSpaceX" format="dimension"></attr>
        <attr name="gridSpceY" format="dimension"></attr>
        <attr name="gridRowNumber" format="integer"></attr>
        <attr name="gridColNumber" format="integer"></attr>
    </declare-styleable>
    <declare-styleable name="PageMarkView">
        <attr name="pageSpaceSize" format="dimension"></attr>
        <attr name="pageImageSize" format="dimension"></attr>
        <attr name="pageImageNormal" format="reference"></attr>
        <attr name="pageImageSelect" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="ObservableScrollView">
        <attr name="zoomId" format="reference|integer" />
        <attr name="maxZoom" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RefreshView">
        <attr name="type" format="enum">
            <enum name="sun" value="0" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ucrop_UCropView">

        <!--Crop image view-->
        <attr name="ucrop_aspect_ratio_x" format="float" />
        <attr name="ucrop_aspect_ratio_y" format="float" />

        <!--Overlay view-->
        <attr name="ucrop_show_oval_crop_frame" format="boolean" />
        <attr name="ucrop_oval_dimmed_layer" format="boolean" />
        <attr name="ucrop_dimmed_color" format="color" />

        <attr name="ucrop_grid_stroke_size" format="dimension" />
        <attr name="ucrop_grid_color" format="color" />
        <attr name="ucrop_grid_row_count" format="integer" />
        <attr name="ucrop_grid_column_count" format="integer" />
        <attr name="ucrop_show_grid" format="boolean" />

        <attr name="ucrop_frame_stroke_size" format="dimension" />
        <attr name="ucrop_frame_color" format="color" />
        <attr name="ucrop_show_frame" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="name" format="string"/>
    </declare-styleable>

    <declare-styleable name="Circle">
        <attr name="circleBackground" format="integer"/>
        <attr name="firstChildPosition">
            <enum name="East" value="0" />
            <enum name="South" value="90" />
            <enum name="West" value="180" />
            <enum name="North" value="270" />
        </attr>
        <attr name="rotateToCenter" format="boolean" />
        <attr name="isRotating" format="boolean" />
    </declare-styleable>
</resources>