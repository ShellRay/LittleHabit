<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#39AEC2</item>
        <item name="colorPrimaryDark">#39AEC2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="giftDialog" parent="@style/gAlertDialogTheme"></style>
    <style name="gAlertDialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@mipmap/alpha</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:padding">0dip</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- 礼物面板弹出动画 -->
    <style name="dialogAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/qiqi_push_down_in_half</item>
        <item name="@android:windowExitAnimation">@anim/qiqi_push_down_out</item>
    </style>
</resources>
