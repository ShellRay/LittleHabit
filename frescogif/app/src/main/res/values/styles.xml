<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#39AEC2</item>
        <item name="colorPrimaryDark">#39AEC2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TransAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#39AEC2</item>
        <item name="colorPrimaryDark">#39AEC2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppSideTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    <style name="giftDialog" parent="@style/gAlertDialogTheme"></style>
    <style name="gAlertDialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@mipmap/alpha</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:padding">0dip</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="MyStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>

    </style>
    <style name="SimpleStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#39AEC2</item>
        <item name="colorPrimaryDark">#39AEC2</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>

    </style>
    <!-- 礼物面板弹出动画 -->
    <style name="dialogAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/qiqi_push_down_in_half</item>
        <item name="@android:windowExitAnimation">@anim/qiqi_push_down_out</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_left</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_style1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_left_blue</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_style2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_left_sienna</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="weightLinear">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|top</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FullScreenStyle" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>

    </style>
</resources>
